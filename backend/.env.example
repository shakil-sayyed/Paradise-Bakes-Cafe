# ==============================
# Paradise Bakes & Cafe Backend
# Environment Variables Example
# ==============================

# ------------------------------
# SERVER CONFIG
# ------------------------------
PORT=5000
NODE_ENV=production
BASE_URL=https://padisebakescafe.com

# ------------------------------
# DATABASE CONFIG
# ------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD
DB_NAME=tcp_database

# ------------------------------
# JWT CONFIG
# ------------------------------
JWT_ACCESS_SECRET=YOUR_ACCESS_SECRET
JWT_REFRESH_SECRET=YOUR_REFRESH_SECRET
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# ------------------------------
# ADMIN CONFIG
# ------------------------------
# These are seeded only in dev. Change immediately in production.
SEED_ADMIN_PASSWORD=pAradise1!

# ------------------------------
# CORS CONFIG
# ------------------------------
CORS_ORIGIN=https://padisebakescafe.com

# ------------------------------
# SECURITY CONFIG
# ------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# ------------------------------
# OPTIONAL AWS S3 FOR BACKUPS
# ------------------------------
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=YOUR_BUCKET_NAME
AWS_REGION=ap-south-1
ENABLE_S3_UPLOAD=false

